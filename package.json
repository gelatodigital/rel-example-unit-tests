{
  "name": "relay-unit-test",
  "version": "1.0.0",
  "description": "Gelato Relay Unit testing",
  "scripts": {
    "build": "yarn install && yarn compile && npx tsc",
    "clean": "yarn hardhat clean && rm -rf dist",
    "compile": "npx hardhat compile --force",
    "deploy": "npx hardhat deploy",
    "test": "npx hardhat test",
    "format": "prettier --write '*/**/*.*{js,json,md,ts}'",
    "format:check": "prettier --check '*/**/*.*{js,json,md,ts}'",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "postinstall": "yarn husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@gelatonetwork/relay-context": "^3.0.0",
    "@gelatonetwork/relay-sdk": "^4.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.1",
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "chai": "4.3.7",
    "dotenv": "10.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "hardhat": "^2.14.1",
    "hardhat-deploy": "0.11.29",
    "husky": "8.0.3",
    "lint-staged": "11.1.2",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.4.1",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.*{js,json,md,ts,sol,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  }
}
